{
  "size": 0,
  "query": {
    "range": {
      "created_at": {
        "gte": "Wed Aug 01 00:00:00 +0000 2020",
        "lt": "Tue Sep 01 00:00:00 +0000 2020"
      }
    }
  },
  "aggs": {
    "clowns": {
      "date_histogram": {
        "field": "created_at",
        "calendar_interval": "1d"
      },
      "aggs": {
        "candidates": {
          "filters" : {
            "filters" : {
              "biden" :   {
                "match" : {
                  "user.description" : "Joe Biden"
                }
              },
              "trump" :   {
                "match" : {
                  "user.description" : "Donald Trump"
                }
              }
            }
          },
          "aggs": {
            "sales": {
              "sum": {
                "field": "retweet_count"
              }
            }
          }
        }
      }
    }
  }
}